# =================================
# Shortify Environment Configuration
# =================================
# Copy this file to .env and update the values
# NEVER commit the .env file to version control

# ---------------------------------
# Server Configuration
# ---------------------------------
PORT=3000
NODE_ENV=development

# ---------------------------------
# Database Configuration
# ---------------------------------
# REQUIRED: MongoDB connection string
MONGODB_URI=mongodb+srv://Romit:Romit@cluster0.n1etbdc.mongodb.net/

# ---------------------------------
# JWT Configuration
# ---------------------------------
# REQUIRED: Secret key for signing JWT tokens
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Token expiration times
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ---------------------------------
# Cookie Security
# ---------------------------------
# REQUIRED: Secret key for signing cookies (should be different from JWT_SECRET)
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production

# ---------------------------------
# CORS Configuration
# ---------------------------------
# Allowed origin for CORS requests (your frontend URL)
CORS_ORIGIN=http://localhost:3000

# ---------------------------------
# Base URL
# ---------------------------------
# REQUIRED: Base URL of your application (used in email verification and password reset links)
BASE_URL=http://localhost:3000

# ---------------------------------
# Email Configuration (SMTP)
# ---------------------------------
# Optional: Leave empty to use console logging in development
# For production, configure a real SMTP server

# SMTP server hostname
EMAIL_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL)
EMAIL_PORT=587

# SMTP username (your email address)
EMAIL_USER=

# SMTP password (use app-specific password for Gmail)
# For Gmail: https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=

# Email from address
EMAIL_FROM=noreply@shortify.com

# ---------------------------------
# Notes
# ---------------------------------
# 1. Required variables marked as REQUIRED must be set
# 2. Generate strong secrets using crypto.randomBytes()
# 3. Use different secrets for JWT_SECRET and COOKIE_SECRET
# 4. Never use default secrets in production
# 5. Keep secrets at least 32 characters long
# 6. Enable HTTPS in production (NODE_ENV=production)
# 7. Email configuration is optional for development (logs to console)
